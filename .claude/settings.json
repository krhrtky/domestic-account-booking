{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/check-architecture.sh",
            "timeout": 30
          },
          {
            "type": "command",
            "command": ".claude/hooks/check-lint.sh",
            "timeout": 60
          },
          {
            "type": "command",
            "command": ".claude/hooks/check-typecheck.sh",
            "timeout": 60
          },
          {
            "type": "command",
            "command": "npm run test",
            "timeout": 60
          },
          {
            "type": "command",
            "command": ".claude/hooks/ci-full-check.sh",
            "timeout": 180
          },
          {
            "type": "command",
            "command": ".claude/hooks/check-vrt.sh",
            "timeout": 120
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "frontend-design@claude-plugins-official": true
  }
}
